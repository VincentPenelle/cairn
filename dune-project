(package
 (name cairn)
 (synopsis "A derivation explorer and logger for menhir parser")
 (description
  "A small library that takes a parser generated by menhir, logs its execution and provides an interactive terminal user interface to explore it.")
 (depends
  menhirSdk
  menhirLib
  ocaml
  (dune
   (>= 2.9))
  (ocaml
   (>= 4.08))
  (menhir
   (>= 20230608))
  lambda-term
  crunch
  (zed
   (>= 3.0.0))))
